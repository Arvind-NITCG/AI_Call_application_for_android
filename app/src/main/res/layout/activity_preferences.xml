<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingBottom="24dp"
    android:paddingTop="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROTOCOL CONFIG"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUTO-REPLY PAYLOAD"
        android:textColor="#757575"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etConfigMessage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#1A1A1A"
        android:hint="Enter your AI response message here..."
        android:textColor="#FFFFFF"
        android:textColorHint="#555555"
        android:gravity="top|start"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnConfigSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE PROTOCOL"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="14dp"/>

    <TextView
        android:id="@+id/tvConfigStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="System Ready."
        android:textColor="#4CAF50"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:fontFamily="monospace"/>

</LinearLayout>