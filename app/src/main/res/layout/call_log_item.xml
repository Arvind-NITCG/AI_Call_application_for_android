<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#1A1A1A"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:cardCornerRadius="23dp"
        app:cardBackgroundColor="#333333"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/tvAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="A"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/> </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown Caller"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/> <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 98765 43210"
        android:textSize="14sp"
        android:textColor="#B0B0B0"/> <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today, 10:30 AM"
        android:textSize="12sp"
        android:textColor="#757575"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvStatusBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI REPLIED"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#69F0AE"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:visibility="visible"/>

</LinearLayout>
</androidx.cardview.widget.CardView>